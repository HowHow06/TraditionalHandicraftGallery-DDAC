@{
    ViewBag.Title = "Edit Password";
    ViewBag.pageTitle = "Traditional Handicraft Gallery";
    ViewBag.pTitle = "Edit Password";
    ViewBag.noPageTitle = false;
    Layout = "~/Views/_Shared/_GalleryLayout.cshtml";
}
<div class="container">
    <div class="col-md-8 mb-5 mx-auto">
        <div class="hm_login_header">
            <h1>Edit Password Form</h1>
        </div>
        <div class="login_fields">
            <form>
                <div class="form-group mb-2">
                    <input type="password" class="form-control" id="old-password" placeholder="Old Password">
                </div>
                <div class="form-group mb-2">
                    <input type="password" class="form-control" id="new-password" placeholder="New Password">
                </div>
                <div class="form-group mb-2">
                    <input type="password" class="form-control" id="re-password" placeholder="Re-type Password">
                </div>
                <div class="form_btn mb-3">
                    <a href="#" class="hm_btn"> submit</a>
                </div>
            </form>
        </div>
    </div>
</div>