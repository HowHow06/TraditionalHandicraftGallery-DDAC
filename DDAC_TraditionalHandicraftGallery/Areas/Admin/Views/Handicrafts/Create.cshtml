@model DDAC_TraditionalHandicraftGallery.ViewModels.HandicraftViewModel
@{
    ViewBag.Title = "Create";
    ViewBag.pTitle = "Handicrafts";
    ViewBag.pageTitle = "Traditional Handicraft Gallery";
    Layout = "~/Areas/Admin/Views/_Shared/_Layout.cshtml";
}


<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row mb-3">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label asp-for="AuthorName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="AuthorName" class="form-control" />
                            <span asp-validation-for="AuthorName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label asp-for="AuthorEmail" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="AuthorEmail" class="form-control" />
                            <span asp-validation-for="AuthorEmail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label asp-for="TypeId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label asp-for="IsHidden" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input class="form-check-input" asp-for="IsHidden" />
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label asp-for="ImageURLFile" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input asp-for="ImageURLFile" type="file" class="form-control" id="customFile">
                            </div>
                            <span asp-validation-for="ImageURLFile" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col-sm-10">
                        </div>
                        <div class="col-sm-2">
                            <input type="submit" value="Create" class="col-form-label btn btn-primary waves-effect waves-light w-100" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-primary waves-effect waves-light">Back to List</a>
</div>

<!-- end row -->
